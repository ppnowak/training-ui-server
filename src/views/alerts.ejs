<h1>JavaScript Dialog Boxes</h1>

<button onclick="showAlert()">Show Alert</button>
<button onclick="showPrompt()">Show Prompt</button>
<button onclick="showConfirm()">Show Confirm</button>
<button onclick="showHtmlAlert()">Show HTML Alert</button>

<div id="customAlert" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closeHtmlAlert()">&times;</span>
        <p>This is a custom HTML alert box!</p>
        <button onclick="closeHtmlAlert()">OK</button>
    </div>
</div>

<script>
    function showAlert() {
        alert('This is an alert box!');
    }

    function showPrompt() {
        const userInput = prompt('Please enter something:');
        if (userInput !== null) {
            alert('You entered: ' + userInput);
        }
    }

    function showConfirm() {
        const userConfirmed = confirm('Are you sure?');
        if (userConfirmed) {
            alert('You pressed OK!');
        } else {
            alert('You pressed Cancel!');
        }
    }

    function showHtmlAlert() {
        document.getElementById('customAlert').style.display = 'block';
    }

    function closeHtmlAlert() {
        document.getElementById('customAlert').style.display = 'none';
    }
</script>

<style>
    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        justify-content: center;
        align-items: center;
    }

    .modal-content {
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        width: 300px;
        margin: auto;
        text-align: center;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .close {
        float: right;
        font-size: 24px;
        cursor: pointer;
    }

    .close:hover {
        color: red;
    }

    button {
        margin-top: 10px;
    }
</style>
